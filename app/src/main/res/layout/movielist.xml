<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:padding="8dp">

    <!-- Thumbnail Image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/movieImage"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="#fff" />

        <!-- Movie Title -->
        <TextView
            android:id="@+id/movieTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/movieImage"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:text="Title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- Rating -->
        <TextView
            android:id="@+id/movieRating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieTittle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:text="Rating"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp" />

        <!-- Genre -->
        <TextView
            android:id="@+id/movieGenere"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieRating"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:text="GENRE"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp" />

        <!-- Release Year -->
        <TextView
            android:id="@+id/movieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieGenere"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:text="year"
            android:layout_marginBottom="10dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
